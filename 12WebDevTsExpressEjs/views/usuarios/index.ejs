<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <style>
        .usuario-detalle {
            cursor: pointer;
        }
    </style>


    <div class="container">
        <h1 class="mb-4">Listado de usuarios</h1>
        <a href="/usuarios/nuevo" class="btn btn-success mb-2">Nuevo Usuario</a>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Contrase√±a</th>
                    <th scope="col">Comentario</th>
                    <th scope="col" class="text-right">Opociones</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach( usuario => { %>
                    <tr class="usuario-detalle">
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.apellido %></td>
                        <td><%= usuario.contrasenya %></td>
                        <td><%= usuario.comentario %></td>
                        <td class="text-right">
                            <a href="/usuarios/<%= usuario.id %>" class="btn btn-primary btn-sm">Detalle</a>
                            <a href="/usuarios/editar/<%= usuario.id %>" class="btn btn-info btn-sm">Editar</a>
                            <form action="/usuarios/<%= usuario.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %> 
        </table>
    </div>

    
</body>
</html>